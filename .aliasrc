# ls
alias ls="ls --color=auto"
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"

# rm -> trash-put
if type trash-put &> /dev/null; then
  alias rm=trash-put
fi

# editor
if type lvim &> /dev/null; then
  alias vi=lvim
elif type nvim &> /dev/null; then
  alias vi=nvim 
fi

alias v=vi
alias vim=vi

# enable/disable backlight auto off
alias ensleep="(xset s on +dpms)"
alias disleep="(xset s off -dpms)"

# pacman
alias pacmanls="pacman -Qqen"
alias yayls="pacman -Qqem"

# clipboard
alias pbcopy="xclip -selection c"

# cpp
function cb() { (cd build && cmake .. && ([[ $# > 0 ]] && echo $1) | xargs make) }
function cr() { [[ $# > 0 ]] && cb $1 && ./build/$1 ${@:2} }

# rust
alias rb="cargo build"
alias rr="cargo run"

# tex
alias lm="latexmk -pvc -halt-on-error"
